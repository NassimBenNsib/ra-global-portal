# Tunisia-Asia Educational Bridge - Environment Variables

# API Configuration
VITE_API_URL=http://localhost:1337/api
VITE_API_TOKEN=your_api_token_here

# Application Settings
VITE_APP_NAME=RA Global - North Africa's Gateway to Asian Education
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Educational Platform Configuration
VITE_UNIVERSITIES_API=https://api.raglobal.edu/universities
VITE_SCHOLARSHIPS_API=https://api.raglobal.edu/scholarships
VITE_PARTNERSHIPS_API=https://api.raglobal.edu/partnerships

# Geographic Settings
VITE_PRIMARY_REGION=North Africa
VITE_TARGET_REGION=Asia
VITE_BASE_COUNTRY=Tunisia

# Language Support
VITE_SUPPORTED_LANGUAGES=en,fr,ar,zh,ja,ko
VITE_DEFAULT_LANGUAGE=en

# Educational Services
VITE_ENABLE_SCHOLARSHIPS=true
VITE_ENABLE_PARTNERSHIPS=true
VITE_ENABLE_CULTURAL_GUIDANCE=true

# Authentication
JWT_SECRET=your_educational_jwt_secret_here

# Database Configuration (for Educational Data)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ra_global_education
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# Email Configuration for Student Communications
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.raglobal.edu
EMAIL_PORT=587
EMAIL_USERNAME=contact@raglobal.edu
EMAIL_PASSWORD=your_email_password

# File Upload for Student Documents
UPLOAD_PROVIDER=local
MAX_FILE_SIZE=10485760

# Security for Educational Platform
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://raglobal.edu

# Third-party Educational Services
SCHOLARSHIP_API_KEY=your_scholarship_api_key
UNIVERSITY_PORTAL_KEY=your_university_portal_key

# Analytics for Educational Insights
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
STUDENT_TRACKING_ENABLED=true
